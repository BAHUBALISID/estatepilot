# Server
PORT=5001
NODE_ENV=production
BASE_URL=https://estatepilot-api.yourdomain.com
FRONTEND_URL=https://estatepilot.yourdomain.com

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/estatepilot
REDIS_URL=redis://127.0.0.1:6379

# JWT
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_SECRET_64_CHARS
JWT_EXPIRY=7d

# Gemini AI
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-2.5-flash

# WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=YOUR_WHATSAPP_ACCESS_TOKEN
WHATSAPP_BUSINESS_ID=YOUR_WHATSAPP_BUSINESS_ID
WHATSAPP_PHONE_NUMBER_ID=YOUR_WHATSAPP_PHONE_NUMBER_ID
WHATSAPP_WEBHOOK_VERIFY_TOKEN=estatepilot-verify-123

# Admin (for initial setup)
ADMIN_EMAIL=admin@estatepilot.com
ADMIN_PASSWORD=Admin@123
